{
  "variables": [
    {
      "name": "totalMoney",
      "type": "number",
      "value": 0.5
    },
    {
      "name": "autoClickMultiplier",
      "type": "number",
      "value": 1
    },
    {
      "name": "autoTickInterval",
      "type": "number",
      "value": 1000
    },
    {
      "name": "workAmount",
      "type": "number",
      "value": 0.05
    },
    {
      "name": "upgradeCost",
      "type": "number",
      "value": 1
    },
    {
      "name": "workAmountIncrease",
      "type": "number",
      "value": 1.1
    },
    {
      "name": "workAmountIncreaseMultiplier",
      "type": "number",
      "value": 1.1
    },
    {
      "name": "autoCost",
      "type": "number",
      "value": 10
    },
    {
      "name": "autoCostMultiplier",
      "type": "number",
      "value": 1.5
    },
    {
      "name": "upgradeUpgradeCost",
      "type": "number",
      "value": 100
    },
    {
      "name": "upgradeIncreaseAmount",
      "type": "number",
      "value": 0.01
    },
    {
      "name": "upgradeupgradeMultiplierMultiplier",
      "type": "number",
      "value": 1.1
    }
  ],
  "events": [
    {
      "name": "OnBegin",
      "type": "General",
      "properties": [],
      "logic": [
        {
          "action": "setTextRunValue",
          "targetName": "MoneyTextField",
          "formatString": "$${totalMoney}"
        },
        {
          "action": "setTextRunValue",
          "targetName": "UpgradeAmountTextField",
          "formatString": "x$${workAmountIncrease} ($${upgradeCost})"
        },
        {
          "action": "callFunction",
          "functionName": "updateUpgradeAvailability"
        }
      ]
    },
    {
      "name": "IncreaseMoney",
      "type": "General",
      "properties": [],
      "logic": [
        {
          "action": "add",
          "target": "totalMoney",
          "source": "workAmount"
        },
        {
          "action": "round",
          "target": "totalMoney",
          "decimals": 2
        },
        {
          "action": "updateRiveInput",
          "inputName": "TotalMoney",
          "variableName": "totalMoney"
        },
        {
          "action": "callFunction",
          "functionName": "updateMoneyDisplay"
        },
        {
          "action": "callFunction",
          "functionName": "updateUpgradeAvailability"
        }
      ]
    },
    {
      "name": "UpgradeEvent",
      "type": "General",
      "properties": [
        {
          "name": "UpgradeAmount",
          "type": "number",
          "value": 0.01
        }
      ],
      "logic": [
        {
          "action": "conditional",
          "conditionType": "greaterOrEqual",
          "leftVariable": "totalMoney",
          "rightVariable": "upgradeCost",
          "trueLogic": [
            {
              "action": "subtract",
              "target": "totalMoney",
              "source": "upgradeCost"
            },
            {
              "action": "multiply",
              "target": "upgradeCost",
              "factor": 1.05
            },
            {
              "action": "round",
              "target": "upgradeCost",
              "decimals": 2
            },
            {
              "action": "multiply",
              "target": "workAmount",
              "source": "workAmountIncrease"
            },
            {
              "action": "round",
              "target": "workAmount",
              "decimals": 2
            },
            {
              "action": "updateRiveInput",
              "inputName": "TotalMoney",
              "variableName": "totalMoney"
            },
            {
              "action": "updateRiveInput",
              "inputName": "UpgradeCost",
              "variableName": "upgradeCost"
            },
            {
              "action": "updateRiveInput",
              "inputName": "WorkAmount",
              "variableName": "workAmount"
            },
            {
              "action": "setTextRunValue",
              "targetName": "WorkAmountTextField",
              "formatString": "$${workAmount}"
            },
            {
              "action": "setTextRunValue",
              "targetName": "UpgradeAmountTextField",
              "formatString": "x$${workAmountIncrease} ($${upgradeCost})"
            },
            {
              "action": "callFunction",
              "functionName": "updateMoneyDisplay"
            },
            {
              "action": "callFunction",
              "functionName": "updateUpgradeAvailability"
            }
          ]
        }
      ]
    },
    {
      "name": "Upgrade2Event",
      "type": "General",
      "properties": [],
      "logic": [
        {
          "action": "conditional",
          "conditionType": "greaterOrEqual",
          "leftVariable": "totalMoney",
          "rightVariable": "upgradeUpgradeCost",
          "trueLogic": [
            {
              "action": "subtract",
              "target": "totalMoney",
              "source": "upgradeUpgradeCost"
            },
            {
              "action": "add",
              "target": "workAmountIncrease",
              "source": "upgradeIncreaseAmount"
            },
            {
              "action": "multiply",
              "target": "upgradeUpgradeCost",
              "factor": 1.1
            },
            {
              "action": "round",
              "target": "upgradeUpgradeCost",
              "decimals": 2
            },
            {
              "action": "callFunction",
              "functionName": "updateMoneyDisplay"
            },
            {
              "action": "callFunction",
              "functionName": "updateUpgradeAvailability"
            }
          ]
        }
      ]
    },
    {
      "name": "AutoEvent",
      "type": "General",
      "properties": [],
      "logic": [
        {
          "action": "conditional",
          "conditionType": "greaterOrEqual",
          "leftVariable": "totalMoney",
          "rightVariable": "autoCost",
          "trueLogic": [
            {
              "action": "subtract",
              "target": "totalMoney",
              "source": "autoCost"
            },
            {
              "action": "callFunction",
              "functionName": "startAutoClicker"
            },
            {
              "action": "multiply",
              "target": "autoCost",
              "factor": 1.5
            },
            {
              "action": "round",
              "target": "autoCost",
              "decimals": 2
            },
            {
              "action": "callFunction",
              "functionName": "updateMoneyDisplay"
            },
            {
              "action": "callFunction",
              "functionName": "updateUpgradeAvailability"
            }
          ]
        }
      ]
    }
  ],
  "inputs": [
    {
      "name": "TotalMoney",
      "type": "number",
      "value": "0"
    },
    {
      "name": "WorkAmount",
      "type": "number",
      "value": "0.01"
    },
    {
      "name": "WorkAmountUpgrade",
      "type": "number",
      "value": "0.01"
    },
    {
      "name": "UpgradeCost",
      "type": "number",
      "value": "1"
    },
    {
      "name": "AutoCost",
      "type": "number",
      "value": "10"
    },
    {
      "name": "UpgradeAvailable",
      "type": "boolean",
      "value": "false"
    },
    {
      "name": "Upgrade2Available",
      "type": "boolean",
      "value": "false"
    },
    {
      "name": "AutoAvailable",
      "type": "boolean",
      "value": "false"
    }
  ]
}
